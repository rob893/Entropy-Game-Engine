    "files": [
        "compiled"
    ],
    "directories": {
        "test": "test"
    },
    "dependencies": {
        "@aspnet/signalr": "^1.1.4"
    },
    "devDependencies": {
        "@types/html-webpack-plugin": "^3.2.2",
        "@types/jest": "^25.1.4",
        "@typescript-eslint/eslint-plugin": "^2.26.0",
        "@typescript-eslint/parser": "^2.26.0",
        "acorn": "^7.1.1",
        "circular-dependency-plugin": "^5.2.0",
        "clean-webpack-plugin": "^3.0.0",
        "eslint": "^6.8.0",
        "eslint-config-prettier": "^6.10.1",
        "eslint-loader": "^3.0.3",
        "eslint-plugin-prettier": "^3.1.2",
        "file-loader": "^6.0.0",
        "html-webpack-plugin": "^4.0.3",
        "jest": "^25.2.4",
        "jest-canvas-mock": "^2.2.0",
        "jest-matcher-deep-close-to": "^1.3.0",
        "prettier": "^2.0.2",
        "ts-jest": "^25.3.0",
        "ts-loader": "^6.2.2",
        "typescript": "^3.8.3",
        "webpack": "^4.42.1",
        "webpack-cli": "^3.3.11",
        "webpack-dev-server": "^3.10.3",
        "webpack-merge": "^4.2.2"
    },
    "scripts": {
        "test": "jest --coverage",
        "test-watch": "jest --watch --coverage",
        "start": "webpack-dev-server --open --config webpack.dev.js",
        "dev": "webpack-dev-server --open --config webpack.dev.js",
        "build": "webpack --config webpack.prod.js",
        "prettier": "prettier --write **/*.{ts,js,css,html,json} !**/node_modules/** !**/dist/** !**/coverage/** !**/compiled/**",
        "lint": "./node_modules/.bin/eslint src/**/*.ts",
        "lint-fix": "./node_modules/.bin/eslint --fix src/**/*.ts",
        "test-pub": "rm -rf compiled/ && tsc"
    },
    "jest": {
        "setupFiles": [
            "jest-canvas-mock"
        ]
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/rob893/TypeScript-Game-Engine.git"
    },
    "keywords": [
        "game",
        "engine",
        "typescript"
